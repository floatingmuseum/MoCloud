<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/reply_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="4"
        android:maxLines="6"
        android:gravity="top"
        tools:text="对对对这就是我的回复" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_spoiler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spoiler"/>
        <CheckBox
            android:id="@+id/is_spoiler"
            android:layout_toRightOf="@+id/tv_spoiler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/send_reply"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_send_black_48dp"/>
    </RelativeLayout>

</LinearLayout>