<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    style="@style/card_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">

        <com.floatingmuseum.mocloud.widgets.RatioImageView
            android:id="@+id/iv_poster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            app:image_ratio="1.42"
            tools:src="@drawable/default_movie_poster" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_movie_title_text"
                style="@style/detail_title"
                android:text="@string/movie_title" />

            <TextView
                android:id="@+id/tv_movie_title"
                style="@style/detail_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                tools:text="TRON: Legacy" />

            <TextView
                android:id="@+id/tv_movie_released_text"
                style="@style/detail_title"
                android:text="@string/released" />

            <TextView
                android:id="@+id/tv_movie_released"
                style="@style/detail_content"
                tools:text="December 10, 2010" />


            <TextView
                android:id="@+id/tv_movie_runtime_text"
                style="@style/detail_title"
                android:text="@string/run_time" />

            <TextView
                android:id="@+id/tv_movie_runtime"
                style="@style/detail_content"
                tools:text="125 mins" />


            <TextView
                android:id="@+id/tv_movie_language_text"
                style="@style/detail_title"
                android:text="@string/language" />

            <TextView
                android:id="@+id/tv_movie_language"
                style="@style/detail_content"
                tools:text="English" />

            <TextView
                android:id="@+id/tv_movie_rating_text"
                style="@style/detail_title"
                android:text="@string/rating" />

            <TextView
                android:id="@+id/tv_movie_rating"
                style="@style/detail_content"
                tools:text="6.5" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
